[
  {
    "context": "EmptyPane || SharedScreen || ProjectPanel || Terminal || Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "ctrl-s |": "workspace::NewTerminal",
      "space e": "workspace::ToggleLeftDock",
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "space f f": "file_finder::Toggle",
      "space f b": "tab_switcher::Toggle",
      "space l g": [
        "workspace::SendKeystrokes",
        ": new center terminal enter lazygit enter"
      ]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-d": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "shift-k": "editor::Hover",
      "space l r": "editor::Rename",
      "space o": "outline::Toggle"
    }
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      "ctrl-d": "tab_switcher::CloseSelectedItem"
    }
  }
]
